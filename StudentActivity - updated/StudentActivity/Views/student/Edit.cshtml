@model StudentActivity.Models.student
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Edit </h2>

<form action="/student/edit/@Model.stud_id" method='post'>
    <div class="form-row">

        <div class="form-group col-md-6">
            <input type="hidden" name="stud_id" value="@Model.stud_id" />
            <label for="studentname">Student Name</label>
            <input type="text" class="form-control" name="sname" id="studentname" value="@Model.sname" placeholder="Student Name" />
        </div>
        <div class="form-group col-md-6">
            <label for="phone">Phone Number</label>
            <input type="text" class="form-control" name="phone" id="phone" value="@Model.phone" placeholder="Student Phone number" />
        </div>
        <div class="form-group col-md-6">
            <label for="address">Address</label>
            <input type="text" class="form-control" name="address" id="address" value="@Model.address" placeholder="student Address" />
        </div>
        <div class="form-group col-md-6">
            <label for="gender">Gender</label><br>

            <input id="Gender" name="Gender" value="Male" @(ViewBag.student.gender == "Male" ? "checked='true'" : "") required type="radio">
            <label for="Male">Male</label><br>
            <input id="Gender" name="Gender" value="Female" @(ViewBag.student.gender == "Female" ? "checked='true'" : "") required type="radio">
            <label for="Female">Female</label>
            @*<input type="text" class="form-control" name="gender" id="gender"  placeholder="student gender" />*@
        </div>

        <br />

    </div>
    <button type="submit" class="btn btn-success">save</button>
    <a class="btn btn-danger" href="/student/index">Cancel</a>
</form>
