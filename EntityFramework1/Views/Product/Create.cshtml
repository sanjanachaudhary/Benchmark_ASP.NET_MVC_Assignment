@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Layout1.cshtml";
}

<h1>Product</h1>
<form action="/Product/Create" method="post">
    
    <div class="form-group">
        <label>Enter Product Name</label>
        <input type="text" class="form-control" id="ProductName" name="pname">
    </div>
    <div class="form-group">
        <label>Enter Product price</label>
        <input type="text" class="form-control" id="ProductRate" name="price">
    </div>
    <div class="form-group">
        <label>Date Of purchace</label>
        <input type="date" class="form-control" id="ProductId" name="dop">
    </div>
    <div class="form-group">
        <label>Status</label>
        <select class="form-control" id="astatus" name="astatus">
            <option value="">Please Select option</option>
            <option value="Instock">Instock</option>
            <option value="Outstock">Outstock</option>

        </select>
    </div>
    <div class="form-group">
        <label>Catogory id</label>

        <select class="form-control" id="catid" name="cid">
            <option value="">Please Select option</option>
            @foreach (var cat in ViewBag.category)
            {
            <option value="@cat.cid">@cat.cname</option>
            }

        </select>

    </div>
    <div class="form-group">
        <label>Brand id</label>
        <select class="form-control" id="bid" name="bid">
            <option value="">Please Select option</option>
            @foreach (var brand in ViewBag.brand)
            {
                <option value="@brand.bid">@brand.bname</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Active</label>
        <input class="form-check-input" type="checkbox"  id="ProductRate" name="active" value="True">
    </div>
    <button class="btn-outline-success">Submit</button>
</form>


