@model EntityFramework1.Models.product

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Layout1.cshtml";
}

<h1>Edit</h1>
<form action="/Product/Edit/@Model.pid" method="post">
    <div class="form-group">
        <label>Enter Product Id</label>
        <input type="hidden" class="form-control" id="ProductName" name="pid" value="@Model.pid">
    </div>

    <div class="form-group">
        <label>Enter Product Name</label>
        <input type="text" class="form-control" id="ProductName" name="pname" value="@Model.pname">
    </div>
    <div class="form-group">
        <label>Enter Product price</label>
        <input type="text" class="form-control" id="ProductRate" name="price" value="@Model.price">
    </div>
    <div class="form-group">
        <label>Date Of purchace</label>
        <input type="date" class="form-control" id="ProductId" name="dop" value="@Model.dop.Value.ToString("yyyy-MM-dd")">
    </div>
    <div class="form-group">
        <label>Status</label>
        <input type="text" class="form-control" id="ProductRate" name="astatus" value="@Model.astatus">
    </div>
    <div class="form-group">
        <label>Catogory id</label>

        <select class="form-control" id="catid" name="cid">
            <option value="">Please Select option</option>
            @foreach (var cat in ViewBag.category)
            {
                if (cat.cid == Model.cid)
                {
                    <option value="@cat.cid" selected="selected">@cat.cname</option>

                }
                else
                {
                    <option value="@cat.cid">@cat.cname</option>
                }
            }

        </select>

    </div>
    <div class="form-group">
        <label>Brand </label>
        <select class="form-control" id="bid" name="bid">
            <option value="">Please Select option</option>
            @foreach (var brand in ViewBag.brand)
            {
                if ( brand.bid==Model.bid)
                {
        <option value="@brand.bid" selected="selected">@brand.bname</option>
                }
                else
                {
                <option value="@brand.bid">@brand.bname</option>
                }
            }
        </select>

    </div>

    <div class="form-group">
        <label>Active</label>
        <input class="form-check-input" type="checkbox" id="ProductRate" name="active" value="True" checked="@Model.active">
    </div>
    <button class="btn-outline-success">Submit</button>
</form>

