@model StudentActivity.Models.activity
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Create Activity</h2>

<form action="/activity/create" method='post' enctype="multipart/form-data">
    <div class="form-row">

        <div class="form-group col-md-6">
            <label for="studentname">Activity</label>
            <input type="text" class="form-control" name="activity1" id="activity" placeholder=" Enter activity " />
            @Html.ValidationMessageFor(temp => temp.activity1)
        </div>
        <div class="form-group col-md-6">
            <label for="phone">cost</label>
            <input type="text" class="form-control" name="cost" id="cost" placeholder="cost" />
            @Html.ValidationMessageFor(temp => temp.cost)
        </div>
        <div class="form-group col-md-6">
            <label for="address">student id</label>
            <input type="text" class="form-control" name="stud_id" id="studentid" placeholder="student ID" />
            @Html.ValidationMessageFor(temp => temp.stud_id)
        </div>
    <br />
    <div class="form-group ">
        <label for="image">Image</label><br />
        <input type="file" class="form-control-file" name="photo" id="image" />
        @Html.ValidationMessageFor(temp => temp.photo)

    </div>


    </div><br />
    <button type="submit" class="btn btn-success">create</button>
    <a class="btn btn-danger" href="/activity/index">Cancel</a>
</form>

